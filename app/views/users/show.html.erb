<div>
 <%= render partial: 'partials/user_card', locals: { user: @user } %>
</div>

<div class="card mt-3"> 
  <div class="card-body"> 
    <h4>Bio</h4>
    <p><%= @user.bio %></p> 
  </div>
</div><br>

<div class="recent-posts">
  <% @posts.each do |post| %>
    <a href="/users/<%= post.author.id %>/posts/<%= post.id %>" class="text-decoration-none">
      <div class="mb-4">
        <%= render 'partials/post_card', post: post %>
      </div>
    </a>
  <% end %>
  <button class="d-flex justify-content-center btn-post">
    <%= link_to "See All Posts", user_posts_path(@user) %>
  </button>
</div>