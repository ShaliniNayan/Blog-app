<%= form_for([@user, @post]) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: "form-control", rows: 4 %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Post", class: "btn btn-primary" %>
  </div>
<% end %>