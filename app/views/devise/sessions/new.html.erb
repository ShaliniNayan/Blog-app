<div class="devise-container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "signup-form" } ) do |f| %>
    <div class="field">
      
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
   
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "remember-me-text"%>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"button" %>
    </div>
  <% end %>
  
<%= render "devise/shared/links" %>
</div>